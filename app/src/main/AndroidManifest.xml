<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="balti.migrate">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BackupActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".HowToRestore"
            android:screenOrientation="portrait"
            />

        <activity android:name=".ExtraBackups"
            android:screenOrientation="portrait"
            />

        <activity android:name=".PermissionsScreen"
            android:screenOrientation="portrait"
            />

        <activity android:name=".BackupProgressLayout"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            />


        <activity android:name=".HelpPage"
            android:screenOrientation="portrait"
            />

        <activity android:name=".PreferenceScreen"
            android:screenOrientation="portrait"
            />

        <service android:name=".BackupService"/>

    </application>

</manifest>