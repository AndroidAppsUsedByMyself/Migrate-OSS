<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="balti.migrate">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--<uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <!--<uses-permission android:name="android.permission.DUMP"
        tools:ignore="ProtectedPermissions" />-->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        >

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6582325651261661~4343120914"/>


        <activity android:name=".simpleActivities.MainActivityKotlin"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.Launcher"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".simpleActivities.InitialGuideKotlin"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>

        <activity android:name=".backupActivity.BackupActivityKotlin"
            android:screenOrientation="portrait"
            />

        <activity android:name=".HowToRestore"
            android:screenOrientation="portrait"
            />

        <activity android:name=".extraBackupsActivity.ExtraBackupsKotlin"
            android:screenOrientation="portrait"
            />

        <activity android:name=".BackupProgressLayout"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            />


        <activity android:name=".HelpPage"
            android:screenOrientation="portrait"
            />

        <activity android:name=".PreferenceScreen"
            android:screenOrientation="portrait"
            />


        <activity android:name=".SimpleLogDisplay"
            android:screenOrientation="portrait"
            />

        <activity android:name=".inAppRestore.ZipPicker"
            android:screenOrientation="portrait"
            />

        <activity android:name=".inAppRestore.InAppRestore"
            android:screenOrientation="portrait"
            />

        <service android:name=".BackupService"/>

        <provider
            android:authorities="migrate.provider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

    </application>

</manifest>