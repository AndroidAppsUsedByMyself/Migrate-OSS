<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_bg" />
            <corners android:radius="@dimen/large_padding_width" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/large_padding_width" />
            <solid android:color="@color/darkerThanPrimary"/>

        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp"
        >
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/large_padding_width" />
            <solid android:color="@color/darker_grey_bg"/>

        </shape>
    </item>
</ripple>