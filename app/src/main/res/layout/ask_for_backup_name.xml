<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/large_padding_width">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setBackupName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="@dimen/large_padding_width"
        android:paddingBottom="@dimen/large_padding_width"
        android:paddingStart="@dimen/small_padding_width"
        android:paddingEnd="@dimen/small_padding_width"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_padding_width"/>

    <EditText
        android:id="@+id/backup_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_backup_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/large_padding_width"
        android:paddingEnd="@dimen/large_padding_width"
        android:id="@+id/filex_layout"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/custom_location"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_button_height"
            android:text="@string/change"
            android:id="@+id/filex_layout_change"
            />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/storage_select_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_padding_width"
        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_location"
            android:id="@+id/custom_location_radio_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_button_height"
            android:layout_marginStart="30dp"
            android:text="@string/change"
            android:id="@+id/location_change_button_for_radio_layout"
            android:visibility="gone"
            />

        <RadioButton
            android:id="@+id/internal_storage_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/internal_storage" />


        <RadioButton
            android:id="@+id/sd_card_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sd_card" />

    </RadioGroup>

    <TextView
        android:id="@+id/destination_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/large_padding_width"
        tools:text="Destination name"
        android:textColor="@color/colorAccent" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_padding_width"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/large_padding_width"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advanced_options"
            android:textColor="@color/colorAccent"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_padding_width"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ignore_cache"
            android:id="@+id/ignore_cache_checkbox"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/migrate_flasher_only_backup"
                android:id="@+id/migrate_flasher_only_checkbox"
                />

            <ImageButton
                android:id="@+id/migrate_flasher_only_warning_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning"
                android:backgroundTint="@android:color/transparent"
                />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_padding_width"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:background="@android:color/transparent"
            android:id="@+id/cancel_ask_for_name"
            />
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:backgroundTint="@color/colorButtons"
            android:id="@+id/start_backup_ask_for_name"
            />
        
    </LinearLayout>

</LinearLayout>