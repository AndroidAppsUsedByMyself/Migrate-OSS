<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/large_padding_width">

    <EditText
        android:id="@+id/backup_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_backup_name" />

    <RadioGroup
        android:id="@+id/storage_select_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_padding_width">

        <RadioButton
            android:id="@+id/internal_storage_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/internal_storage" />


        <RadioButton
            android:id="@+id/sd_card_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sd_card" />

        <TextView
            android:id="@+id/destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            tools:text="Destination name"
            android:textColor="@color/colorAccent" />

    </RadioGroup>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_padding_width"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/large_padding_width"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advanced_options"
            android:textColor="@color/colorAccent"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_padding_width"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ignore_cache"
            android:id="@+id/ignore_cache_checkbox"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/migrate_flasher_only_backup"
                android:id="@+id/migrate_flasher_only"
                />

            <ImageButton
                android:id="@+id/migrate_flasher_only_warning_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning"
                android:backgroundTint="@android:color/transparent"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>