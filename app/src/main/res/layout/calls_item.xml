<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/large_padding_width">

    <ImageView
        android:id="@+id/calls_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_padding_width"
        android:paddingEnd="@dimen/large_padding_width"
        android:src="@drawable/ic_incoming_call" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/small_padding_width">

        <TextView
            android:id="@+id/calls_item_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chima"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/calls_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="+919152153748"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/calls_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/09/2018"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/calls_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 sec"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/calls_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>