<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/large_padding_width">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_made"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:drawableStart="@drawable/ic_zipping_icon"
        android:drawablePadding="@dimen/xlarge_padding_width"
        android:gravity="center"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_padding_width"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zns_backup_name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Backup_2020.04.24"
        />

</LinearLayout>